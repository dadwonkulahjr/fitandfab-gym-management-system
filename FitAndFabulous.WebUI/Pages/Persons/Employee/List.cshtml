@page
@model FitAndFabulous.WebUI.Pages.Persons.Employee.ListModel
@{
    ViewData["Title"] = "Employee List";
}

<div class="border backgroundWhite container shadow mb-5">
    <div class="row">
        <div class="col-9">
            <h5 class="text-success">
                <i class="fas fa-list-alt"></i>&nbsp;Employee List
            </h5>

        </div>
        <div class="col-3">
            <a class="btn btn-outline-success form-control" asp-page="upsert">
                <i class="fa fa-plus-square"></i>&nbsp;Add
            </a>
        </div>
    </div>
    <hr />
    <div class="col-sm-12 border mt-1 p-4 table-responsive">
        <form method="post">
            @*<div class="table-responsive">*@
            <table class="table border table-hover table-striped" id="persons" style="width:100%;">
                <thead class="table-secondary">
                    <tr>
                        <th>Fullname</th>
                        <th>Office Email</th>
                        <th>Dob</th>
                        <th>Address</th>
                        <th>Gender</th>
                        <th>Type</th>
                        <th>Salary</th>
                        <th>Contact</th>
                        <th>Date Hire</th>
                        <th>Suffix</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
            @*</div>*@




        </form>



    </div>
</div>

@section Scripts{
    <script src="~/js/employees.js"></script>

}
