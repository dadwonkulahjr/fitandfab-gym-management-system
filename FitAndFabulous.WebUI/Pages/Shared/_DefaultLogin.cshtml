<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"] - Fit And Fabulous</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @*@if (User.Identity.IsAuthenticated)
        {*@
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/images/favicon.ico" />

    <!--===============================================================================================-->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/font-awesome/css/all.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/css/material-design-iconic-font.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/css/animate.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/css/hamburgers.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/css/animsition.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/css/select2.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/css/daterangepicker.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/css/util.css" rel="stylesheet" />
    <link href="~/css/main.css" rel="stylesheet" />
    <!--===============================================================================================-->
    @*}*@
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {

    }
    else
    {
        //if (User.Identity.IsAuthenticated)
        //{
        <div class="limiter">
            <div class="container-login100" style="background-image: url('images/gym-image-1.jpg');">
                <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
                    <form class="login100-form validate-form">
                        <span class="login100-form-title p-b-49" style="font-family:Verdana;">
                            Fit And Fabulous<br />Login
                        </span>

                        <div class="wrap-input100 validate-input m-b-23" data-validate="Username is reauired">
                            <span class="label-input100">
                                <i class="far fa-user"></i>&nbsp;Username
                            </span>
                            <input class="input100" type="text" name="username" placeholder="Type your username">
                            @*<span class="focus-input100" data-symbol="&#xf206;"></span>*@
                        </div>

                        <div class="wrap-input100 validate-input" data-validate="Password is required">
                            <span class="label-input100">
                                <i class="fas fa-key"></i>&nbsp;Password
                            </span>
                            <input class="input100" type="password" name="pass" placeholder="Type your password">
                            @*<span class="focus-input100" data-symbol="&#xf190;"></span>*@
                        </div>

                        <div class="text-right p-t-8 p-b-31">
                            @*<a href="#">
                                    Forgot password?
                                </a>*@
                        </div>

                        <div class="container-login100-form-btn">
                            <div class="wrap-login100-form-btn">
                                <div class="login100-form-bgbtn"></div>
                                <button class="btn btn-success form-control" asp-page-handler="/Account/Login">
                                    <i class="fas fa-sign-in-alt"></i>&nbsp;Login
                                </button>
                            </div>
                        </div>

                        <div class="txt1 text-center p-t-54 p-b-20">
                            <span>
                                Or Sign Up Using
                            </span>
                        </div>

                        <div class="flex-c-m">
                            <a href="#" class="login100-social-item bg1" title="Login using Facebook">
                                <i class="fab fa-facebook"></i>
                            </a>

                            <a href="#" class="login100-social-item bg2" title="Login using Microsoft">
                                <i class="fab fa-microsoft"></i>
                            </a>

                            <a href="#" class="login100-social-item bg3" title="Login using Google">
                                <i class="fab fa-google"></i>
                            </a>
                        </div>

                        @*<div class="flex-col-c p-t-155">
                                <span class="txt1 p-b-17">
                                    Or Sign Up Using
                                </span>

                                <a href="#" class="txt2">
                                    Sign Up
                                </a>
                            </div>*@
                    </form>
                </div>
            </div>
        </div>


        <div id="dropDownSelect1"></div>
        @*}*@
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    }
    <!--===============================================================================================-->
    @*@if (User.Identity.IsAuthenticated)
        {*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/js/animsition.min.js"></script>
    <!--===============================================================================================-->

    <script src="~/lib/local_js/popper.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/js/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/js/moment.min.js"></script>
    <script src="~/js/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/js/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/js/main.js"></script>
    @*}*@
</body>
</html>

