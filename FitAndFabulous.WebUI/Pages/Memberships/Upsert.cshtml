@model FitAndFabulous.WebUI.Pages.Memberships.UpsertModel
@{
    if (Model.MembershipViewModel.Membership.Id == 0)
    {
        ViewData["Title"] = "Create new membership";
    }
    else
    {
        ViewData["Title"] = "Update membership";
    }
}


<div class="border backgroundWhite container shadow mb-5">
    <div class="row">
        <div class="col-10">
            @if (Model.MembershipViewModel.Membership.Id == 0)
            {
                <h5 class="text-success">
                    <i class="fas fa-user-plus"></i>&nbsp;Create new membership
                </h5>
            }
            else
            {
                <h5 class="text-success">
                    <i class="far fa-edit"></i>&nbsp;Update membership
                </h5>
            }
        </div>
    </div>
    <hr />
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        @if (Model.MembershipViewModel.Membership.Id != 0)
        {
            <input hidden="hidden" asp-for="MembershipViewModel.Membership.PersonId" />
        }

    <div class="border shadow" style="padding:30px;">
        @if (Model.MembershipViewModel.Membership.Id != 0)
        {
            <div class="row">
                <div class="col-3">
                    <label asp-for="MembershipViewModel.Membership.Person.FullName" class="col-form-label"></label>
                </div>
                <div class="col-9">
                    <input asp-for="MembershipViewModel.Membership.Person.FullName" class="form-control" placeholder="Fullname..." disabled="disabled" />
                </div>
            </div>
        }
