                <input asp-for="MembershipViewModel.Membership.Person.Contact" class="form-control mt-2" placeholder="Contact..." />
                <span asp-validation-for="MembershipViewModel.Membership.Person.Contact" class="text-danger"></span>
            </div>
        </div>
        @if (Model.MembershipViewModel.Membership.Id == 0)
        {
            <div class="row mt-4 offset-3">
                <div class="col-sm-6 mt-3">
                    <button class="btn btn-success form-control">
                        <i class="fas fa-plus"></i>&nbsp;Create
                    </button>
                </div>
                <div class="col-sm-6 mt-3">
                    <a class="btn btn-secondary form-control" style="height:auto;" asp-page="list">
                        <i class="fas fa-list"></i>&nbsp;Back to List
