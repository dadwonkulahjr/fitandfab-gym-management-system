@page
@model FitAndFabulous.WebUI.Pages.Schedules.ListModel
@{
    ViewData["Title"] = "List of schedules";
}


<div class="border backgroundWhite container shadow mb-5">
    <div class="row">
        <div class="col-9">
            <h5 class="text-success">
                <i class="fas fa-calendar-alt"></i>&nbsp;Schedule List
            </h5>

        </div>
        <div class="col-3">
            <a class="btn btn-outline-success form-control">
                <i class="fa fa-plus-square"></i>&nbsp;Add
            </a>
        </div>
    </div>
    <hr />
    <div class="col-sm-12 border mt-1 p-4 table-responsive">
        @*<div class="table-responsive">*@
        <table class="table border table-hover table-striped" id="schedules" style="width:100%;">
            <thead class="table-secondary">
                <tr>
                    <th>Fullname</th>
                    <th>Gender</th>
                    <th>Type</th>
                    <th>Suffix</th>
                    <th>Office Email</th>
                    <th></th>
                </tr>
            </thead>
        </table>
        @*</div>*@








    </div>
</div>


@section Scripts{

    <script src="~/js/schedules.js"></script>
}
